@using Microsoft.AspNetCore.Identity
@using DnaFragment.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Dna Fragment</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom.css">
 
</head>

<body class="container">
    <header>
       
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container">
                <a class="navbar-brand text-warning font-italic" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://uploads-ssl.webflow.com/608509b228908f72551ad0cd/60852d79dad40d6c6a4ed6fd_Aloe%20Capital%20Logo.svg" width="30" height="30" alt="">dna fragment
                </a>
                <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="text-white">MENU</span>
                </button>

                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var userIsAdmin = User.IsAdmin();

                            @if (userIsAdmin)
                            {

                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-white active h5" asp-area="" asp-controller="LrProducts" asp-action="Add">Add✦Product</a>
                                </li>

                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-white active h5" asp-area="" asp-controller="LrProducts" asp-action="All">All✦Products</a>
                                </li>

                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-white active h5" asp-area="" asp-controller="LrUsers" asp-action="All">All✦Users</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-white active h5" asp-area="" asp-controller="Categories" asp-action="All">LR✦Shop</a>
                                </li>
                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-white active h5" asp-area="" asp-controller="LrProducts" asp-action="Favorits">♥</a>
                                </li>
                            }
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-white active h5" asp-area="" asp-controller="Questions" asp-action="All">My✦Questions</a>

                            </li>
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-white active h5" asp-area="" asp-controller="Messages" asp-action="All">📨</a>
                            </li>                          

                        }
                        else
                        {

                            <li class="nav-item ml-auto">
                                <a class="nav-link text-white active h5" asp-area="" asp-controller="Categories" asp-action="All">LR✦Shop</a>
                            </li>
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-white active h5" asp-area="" asp-controller="LrProducts" asp-action="Favorits">♥</a>
                            </li>                            

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

            </div>

        </nav>

    </header>

    <main>
        @RenderBody()
    </main>
   
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 20px;
            background-color: slategrey;
            color: WindowText;
            text-align: center;
        }
    </style>

    <div class="footer">
        <p>@DateTime.UtcNow.Year - DnaFragment. All rights reserved.</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>